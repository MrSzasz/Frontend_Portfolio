---
import CustomCursor from "@/components/CustomCursor/CustomCursor.astro";
import "@fontsource/dm-mono";

import "@fontsource/kanit";

import "../styles/globals.css";
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";
  };
  const isDark = getThemePreference() === "dark";
  document.documentElement.classList[isDark ? "add" : "remove"]("dark");

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
    });
  }
</script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Welcome to my personal web portfolio—a showcase of my skills in HTML/CSS, JavaScript, React, Node.js, and beyond. Dive into my array of projects with a fresh design as you journey through my professional experiences"
    />
    <meta
      name="keywords"
      content="HTML, CSS, JavaScript, React, Node.js, Astro, Tailwind, ShadCN, Portfolio, Tomás, Lugo, Lugo Tomás, Tomás Lugo"
    />
    <meta name="viewport" content="width=device-width" />
    <!-- TODO => Add icon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>TOMAS LUGO = PORTFOLIO</title>
  </head>
  <body class="cursor-none">
    <slot />
    <CustomCursor />
  </body>
</html>
