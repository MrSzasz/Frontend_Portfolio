---
export interface Props {
  isHero?: boolean;
  isFirst?: boolean;
}

const { isHero, isFirst } = Astro.props;

const classes = {
  heroClasses:
    "h-screen grid place-items-center text-white  sticky top-0 -z-10 bg-[url('/bg/bg4.gif')] bg-[center_175%] bg-repeat-x",
  firstContainerClasses:
    "h-screen grid place-items-center text-white px-[10%] z-10 pt-[10%] bg-[#020202] rounded-t-[7.5%] border-t border-white border-opacity-25",
  defaultClasses:
    "h-screen grid place-items-center text-white px-[10%] bg-[#020202] z-10",
};
---

<section
  class={isHero
    ? classes.heroClasses
    : isFirst
      ? classes.firstContainerClasses
      : classes.defaultClasses}
>
  <slot />
</section>
