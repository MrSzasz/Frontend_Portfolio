---
import ContactButton from "../ContactButton/ContactButton.astro";
import { LuMail } from "react-icons/lu";
import { FaInstagram, FaLinkedin } from "react-icons/fa";
import { FaWhatsapp } from "react-icons/fa";
import { FaXTwitter } from "react-icons/fa6";
import { FaGithub } from "react-icons/fa";
---

<div
  class="grid grid-cols-[min-content_auto] md:grid-cols-2 gap-4 md:gap-0 p-4 h-fit md:h-full w-full my-10"
  id="contact"
>
  <div class="relative h-full">
    <h2 class="text-6xl md:text-7xl sticky top-10 rotateText wk-h3">CONTACT</h2>
  </div>
  <div class="flex flex-col gap-4">
    <ContactButton
      copyText="tomasleandrolugo@gmail.com"
      text="tomasleandrolugo@gmail.com"
      href="mailto:tomasleandrolugo@gmail.com"
    >
      <LuMail className="text-xl md:text-3xl" />
    </ContactButton>
    <ContactButton
      copyText="MrSzasz"
      text="GitHub"
      href="https://github.com/MrSzasz"
    >
      <FaGithub className="text-xl md:text-3xl" />
    </ContactButton>
    <ContactButton
      text="LinkedIn"
      copyText="lugotomasleandro"
      href="https://www.linkedin.com/in/lugotomasleandro/"
    >
      <FaLinkedin className="text-xl md:text-3xl" />
    </ContactButton>
    <ContactButton
      text="Instagram"
      copyText="tomaslugodev"
      href="https://www.instagram.com/tomaslugodev/"
    >
      <FaInstagram className="text-xl md:text-3xl" />
    </ContactButton>
    <ContactButton
      text="X (Twitter)"
      copyText="tomaslugodev"
      href="https://x.com/tomaslugodev"
    >
      <FaXTwitter className="text-xl md:text-3xl" />
    </ContactButton>
    <ContactButton
      text="WhatsApp"
      copyText="+5491166027902"
      href="https://wa.me/5491166027902"
    >
      <FaWhatsapp className="text-xl md:text-3xl" />
    </ContactButton>
  </div>
</div>
